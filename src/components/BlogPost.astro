---
import dayjs from 'dayjs';

export interface Props {
  title: string;
  publishDate: string;
}

const { title, publishDate } = Astro.props;
---

<main class="mb-20">
  <header class="mb-5">
    <h1 class="text-lg md:text-xl font-bold">{title}</h1>
    <p class="text-gray-500">{dayjs(publishDate).format('MMM D, YYYY')}</p>
  </header>
  <article class="prose md:prose-lg prose-green mb-5 mx-auto">
    <slot />
  </article>
</main>
